body
	background url('/assets/img/bg.jpg')	
	font-size 15px
	margin 0
	padding 0

	&:before
	&:after 
		content ''
		position absolute
		width 100%
		display block
		border-top 5px dashed #fff

	&:before
		top 10px
	&:after 
		bottom 10px

.col 
	width 95%
	max-width 920px
	margin 0 auto
	clear both



#page__header 
	padding-top 25px

	h1
		float left
		color #fff
		margin-top 0

#mainmenu
	float right
	margin-top 10px

	button
		border 0 
		background transparent none
		color	#fff
		font-size	15px
		text-transform uppercase
		font-weight 900
		&:focus
			outline none


@media (max-width: 520px)

	#mainmenu
		margin-top 0
		&:before
			content '\2261'
			display block
			float right
			width 40px
			height 40px
			border 1px solid black
			background-color #fff
			font-size 50px
			text-align center
			line-height: 43px;
			border-radius 10px

	#mainmenu__dropdown
		display none
		position relative

		&.dropdown--show
			display block
			position absolute
			top 80px
			right 0
			width 200px
			background-color #fff
			border-radius 10px
			border 1px solid #000


			&:before 
				content ''
				border 11px solid #000
				border-color transparent transparent #000 transparent
				position absolute
				top -22px
				right 19px

			&:after 
				content ''
				border 10px solid #fff
				border-color transparent transparent #fff transparent
				position absolute
				top -20px
				right 20px
			button
				color #000
				width 100%


#wallet__IO
	width 80%
	min-width 300px
	max-width 500px
	margin 0 auto
	text-align center

	.input 
		background-color transparent
		border 0
		border-bottom 2px solid #000
		text-align center
		outline 0
		height 40px
		color #fff
		font-size 30px
		margin 0 auto
		padding 0
		width 80%


	.button
		width 40px
		height 40px
		font-size 31px
		border-radius 25%
		border 0
		outline 0

	.button--add		
		background-color rgba(59, 255, 59, .7)
		float right
		margin-left -40px

	.button--remove
		background-color rgba(255, 59, 59, .7)
		float left
		margin-right -40px